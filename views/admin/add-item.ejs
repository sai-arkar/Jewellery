<%- include('../includes/head.ejs') %>

<%- include('../includes/navigation.ejs', {user: user}) %>

  <main class="main-content  mt-0">
     <div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
       <span class="mask bg-gradient-dark opacity-6"></span>
       <div class="container my-auto">
         <div class="row">
           <div class="col-lg-4 col-md-8 col-12 mx-auto">
             <div class="card z-index-0 fadeIn3 fadeInBottom">
               <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">

                 <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                   <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Add Item</h4>
                 </div>

               </div>
               <div class="card-body">
 
                 <form role="form" 
                  action="/admin/<% if(editing){ %>edit-item<% }else {%>add-item<% } %>" 
                  class="text-start" autocomplete="off" method="post" enctype="multipart/form-data">

                    <div class="input-group input-group-outline my-3">
                         <select class="form-select" aria-label="Default select example" name="categoryId">
                           <% if(categories.length > 0){ %>
                                <% for(let cate of categories){ %>
                                  <option value="<%= cate._id %>" ><%= cate.title %></option>
                                  <% } %>
                           <% }else{ %>
                                <option value="">No Categories Yet</option>
                            <% } %>
                         </select>
                    </div>

                   <div class="input-group input-group-static my-3">
                     <label >Title</label>
                     <input 
                        type="text" 
                        class="form-control" 
                        name="title"
                        value="<% if(editing){%><%=item.title%><%}%>">
                   </div>

                   <div class="input-group input-group-static my-3">
                    <label >Image</label>
                    <input 
                        type="file" 
                        class="form-control" 
                        name="image"
                        value="<% if(editing){%><%=item.image%><%}%>">
                  </div>

                  <div class="input-group input-group-static my-3">
                    <label >Related Iamge</label>
                    <input 
                        type="file" 
                        class="form-control" 
                        name="relatedImage" multiple
                        value="<% if(editing){%><%=item.relatedImage%><%}%>">
                  </div>

                  <div class="input-group input-group-static my-3">
                    <label >Description</label>
                    <textarea 
                        name="description" 
                        id="description" 
                        cols="40" rows="3"><% if(editing){%><%=item.description%><%}%></textarea>
                  </div>

                  <div class="input-group input-group-static my-3">
                    <label >Price</label>
                    
                    <input 
                        type="text" 
                        class="form-control" 
                        name="price"
                        value="<% if(editing){%><%=item.price%><%}%>">
                  </div>

                  <div class="text-center">
                    <% if (editing) { %>
                      <input type="hidden" value="<%= item._id %>" name="itemId">
                     <% } %>
                    <!-- <input type="hidden" name="_csrf" value="<%=  %>"> -->
                    
                    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">
                       <% if (editing) { %>Update Item<% } else { %>Add Item<% } %>
                    </button>
                  </div>
                   
                 </form>
 
               </div>
             </div>
           </div>
         </div>
       </div>

     </div>
   </main>

  <!--   Core JS Files   -->
  <%- include('../includes/end.ejs') %>